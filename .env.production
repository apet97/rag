#############################################
# Production .env (Clockify RAG)
# Copy to .env and adjust API_TOKEN and origins
#############################################

# Runtime
ENV=prod
API_HOST=0.0.0.0
API_PORT=7001
API_TOKEN=CHANGE_ME_TO_A_STRONG_SECRET

# LLM endpoint (no API key required)
LLM_BASE_URL=http://10.127.0.192:11434
LLM_MODEL=gpt-oss:20b
LLM_API_TYPE=ollama

# Index / Namespaces
RAG_INDEX_ROOT=index/faiss
NAMESPACE=clockify
NAMESPACES=clockify_url
RETRIEVAL_K=20

# Embeddings (real encoder)
EMBEDDINGS_BACKEND=real
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384

# Hybrid retrieval
SEARCH_LEXICAL_WEIGHT=0.50

# Chunking
CHUNK_STRATEGY=url_level
CHUNK_SIZE=1200
CHUNK_OVERLAP=200

# Policy
ALLOWLIST_PATH=codex/ALLOWLIST.txt
DENYLIST_PATH=codex/DENYLIST.txt

# Corpus
ENRICHED_LINKS_JSON=codex/CRAWLED_LINKS_enriched.json

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:7001

# Optional
RERANK_DISABLED=false
SEMANTIC_CACHE_MAX_SIZE=10000
SEMANTIC_CACHE_TTL_SECONDS=3600
